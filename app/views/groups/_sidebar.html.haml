.sidebar
  .sidebar-nav
    .sidebar-nav__user-name
      %span #{current_user.name}
    .sidebar-nav__settings
      = link_to new_group_path do
        .fa.fa-pencil-square-o.fa-inverse.fa-lg
      = link_to edit_user_registration_path do
        .fa.fa-cog.fa-inverse.fa-lg
  .sidebar-body
    -groups.each do |group|
      =link_to group_path(group) do
        .joined-group
          .joined-group__group-name #{group.name}
          .joined-group__group-message huge
